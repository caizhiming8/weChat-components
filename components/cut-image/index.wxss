/**index.wxss**/
page {
  height: 100%;
}
.g-cont {
  height: 100%;
  display: flex;
  flex-direction: column;
}
.g-cont>.cont-view {
  flex: 1;
  display: flex;
  overflow: hidden;
  align-items: center;
  justify-content: center;
  background: rgba(0,0,0,.5);
}
.cut_view {
  opacity: 0.5;
  position: absolute;
  background-color: #000;
}
.cut_view>.cut_view_cont {
  position: relative;
  width: 100%;
  height: 100%;
}
.cut_view>.cut_view_cont>.btn {
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  border-radius: 20rpx;
  background-color: #000;
  opacity: 0.8;
  z-index: 1;
}
.cut_view>.cut_view_cont>.btn.left-top {
  left: -20rpx;
  top: -20rpx;
}
.cut_view>.cut_view_cont>.btn.right-bot {
  right: -20rpx;
  bottom: -20rpx;
}
.cut-canvas {
  top: -200000px;
  position: absolute;
}